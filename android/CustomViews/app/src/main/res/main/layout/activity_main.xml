<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal">

            <com.cyjthink.customviews.line_chart.LineChartView
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                app:max_value="1000"
                app:round_rect_bg="@android:color/white"
                app:round_rect_radius="5dp"
                app:point_color="@android:color/black"
                app:point_radius="5dp"
                app:line_color="@android:color/black"
                app:line_width="1dp"
                app:value_text_color="@android:color/black"
                app:value_size="12sp"
                android:id="@+id/line_chart">

            </com.cyjthink.customviews.line_chart.LineChartView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:src="@mipmap/ic_launcher_round"
                android:layout_centerHorizontal="true"
                android:id="@+id/iv_avator"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="普通会员"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/iv_avator"
                android:id="@+id/tv_member"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="打败了温州市70%的用户"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_member"/>
        </RelativeLayout>

        <com.cyjthink.customviews.coupon.CouponView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:weightSum="3"
            app:rect_bg_radius="5dp"
            app:rect_bg_color="@android:color/white"
            app:circle_radius="5dp"
            app:circle_bg="@color/bg">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@color/coupon_red"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tv_money_amount"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/coupon_red"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@id/tv_money_amount"
                    android:layout_alignBaseline="@id/tv_money_amount"
                    android:id="@+id/tv_money_flag"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="满20元可用"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tv_money_amount"/>
            </RelativeLayout>

            <com.cyjthink.customviews.dot_line.DotLineView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:dot_line_width="1dp"
                app:dot_line_color="#aaaaaa"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="饕餮大胃"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="限今日"
                        android:textColor="@color/coupon_red"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="立即使用"
                        android:textColor="#fff"
                        android:background="@drawable/btn_use_now"/>
                </FrameLayout>
            </RelativeLayout>
        </com.cyjthink.customviews.coupon.CouponView>

        <com.cyjthink.customviews.dot_line.DotLineView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            app:dot_line_width="1dp"
            app:dot_line_color="#aaaaaa"/>

        <com.cyjthink.customviews.stroke_text.StrokeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="字体描边"
            android:textSize="80sp"
            android:layout_centerInParent="true"
            android:background="@color/bg"
            app:stroke_color="#4b8bf5"
            app:fill_color="#ffce42"
            app:stroke_width="8dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</ScrollView>
