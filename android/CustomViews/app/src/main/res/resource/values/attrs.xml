<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CouponView">
        <!--背景圆角矩形半径-->
        <attr name="rect_bg_radius" format="dimension"/>
        <!--背景圆角矩形颜色-->
        <attr name="rect_bg_color" format="color"/>
        <!--中间圆点半径-->
        <attr name="circle_radius" format="dimension"/>
        <!--中间圆点背景-->
        <attr name="circle_bg" format="color"/>
    </declare-styleable>

    <declare-styleable name="DotLineView">
        <attr name="dot_line_width" format="dimension"/>
        <attr name="dot_line_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="StrokeTextView">
        <attr name="stroke_color" format="color"/>
        <attr name="fill_color" format="color"/>
        <attr name="stroke_width" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="LineChartView">
        <!--折线图一半高度能表示的最大值-->
        <attr name="max_value" format="integer"/>
        <attr name="round_rect_bg" format="color"/>
        <attr name="round_rect_radius" format="dimension"/>
        <attr name="point_color" format="color"/>
        <attr name="point_radius" format="dimension"/>
        <attr name="line_color" format="color"/>
        <attr name="line_width" format="dimension"/>
        <attr name="value_text_color" format="color"/>
        <attr name="value_size" format="dimension"/>
    </declare-styleable>
</resources>