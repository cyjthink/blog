<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="50dp"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/view_bg"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gift_layout" />

    <ImageView
        android:id="@+id/iv_avator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_avator"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_avator"
        android:text="username"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tv_gift_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_username"
        android:layout_below="@id/tv_username"
        android:layout_marginTop="5dp"
        android:text="赠送礼物文案"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/iv_gift_photo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/tv_gift_des"
        android:background="#000" />

    <TextView
        android:id="@+id/tv_gift_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/view_bg"
        tools:text="x1"
        android:textColor="@android:color/black"
        android:textSize="18sp" />
</RelativeLayout>