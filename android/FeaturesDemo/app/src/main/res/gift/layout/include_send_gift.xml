<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_send_gift">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:id="@+id/view_send_gift_blank"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#d9000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="送给"
            android:textSize="17sp"
            android:textColor="#fff"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_send_gift_switch_left"
            android:id="@+id/iv_switch_left"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_common_avator"
                android:id="@+id/iv_avator"/>

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#fff"
                android:textSize="14sp"
                android:text="不知道取什么名字不知道取什么名字" />
        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_send_gift_switch_right"
            android:id="@+id/iv_switch_right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:text="关闭"
            android:textSize="17sp"
            android:textColor="#80ffffff"
            android:gravity="center_vertical"
            android:id="@+id/tv_close"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"/>

    <com.example.cyj.featuresdemo.gift.view.AdjustableViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d9000000"
        android:id="@+id/view_pager"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d9000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:text="充值"
            android:textColor="#ffe04c"
            android:textSize="17sp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:id="@+id/tv_recharge"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_recharge"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_send_gift_diamond"
            android:id="@+id/iv_diamond"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_diamond"
            android:layout_centerVertical="true"
            android:text="168"
            android:textColor="#fff"
            android:textStyle="bold"
            android:id="@+id/tv_diamond_num"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_diamond_num"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_send_gift_next"
            android:id="@+id/iv_next"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_next"
            android:text="请充值!"
            android:textSize="14sp"
            android:textColor="#ff5500"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:id="@+id/tv_please_recharge"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ll_dots">

            </LinearLayout>

            <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/dot_white"
                android:id="@+id/view_dot_white"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:text="赠送"
            android:textSize="16sp"
            android:textColor="#cc7a29"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@drawable/btn_shop_selector"
            android:id="@+id/tv_send_gift"/>
    </RelativeLayout>
</LinearLayout>