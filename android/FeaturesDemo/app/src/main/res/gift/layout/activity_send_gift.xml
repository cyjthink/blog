<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_send_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_send_gift" />

    <com.example.cyj.featuresdemo.gift.view.GiftLayout
        android:id="@+id/gift_layout_1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:visibility="invisible" />

    <com.example.cyj.featuresdemo.gift.view.GiftLayout
        android:id="@+id/gift_layout_2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/gift_layout_1"
        android:layout_marginTop="10dp"
        android:visibility="invisible" />

    <com.example.cyj.featuresdemo.gift.view.GiftLayout
        android:id="@+id/gift_layout_3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/gift_layout_2"
        android:layout_marginTop="10dp"
        android:visibility="invisible" />

    <include
        layout="@layout/include_send_gift"
        android:visibility="gone" />
</RelativeLayout>